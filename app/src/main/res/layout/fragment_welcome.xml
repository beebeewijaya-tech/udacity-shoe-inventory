<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

  <!-- This screen using Linear because a bit simple because only vertical and horizontal -->

  <LinearLayout
    android:id="@+id/welcome_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/medium_padding"
    android:orientation="vertical">

    <ImageView
      android:id="@+id/welcome_illustration"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/huge_margin"
      android:contentDescription="@string/welcome_illustration"
      android:src="@drawable/ic_welcome" />

    <TextView
      android:id="@+id/welcome_text"
      style="@style/title"
      android:layout_width="match_parent"
      android:layout_marginTop="@dimen/small_margin"
      android:text="@string/welcome_to_shoe_store"
      android:textSize="@dimen/medium_font" />

    <TextView
      android:id="@+id/welcome_description"
      style="@style/title"
      android:layout_width="match_parent"
      android:fontFamily="@font/montserrat"
      android:layout_marginTop="@dimen/tiny_margin"
      android:text="@string/welcome_description"/>

    <Button
      android:id="@+id/button_next"
      style="@style/Button"
      android:layout_width="match_parent"
      android:layout_marginTop="@dimen/small_margin"
      android:text="@string/next" />
  </LinearLayout>
</layout>