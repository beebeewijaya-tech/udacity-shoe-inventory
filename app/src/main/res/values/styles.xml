<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style parent="Theme.AppCompat.DayNight.DarkActionBar" name="ActionBar">
    <item name="colorPrimary">@color/blue</item>
    <item name="colorPrimaryDark">@color/blue</item>
z  </style>

  <style name="title">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:fontFamily">@font/montserrat_bold</item>
    <item name="android:textAlignment">center</item>
  </style>

  <style name="Input">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">50dp</item>
    <item name="android:layout_marginTop">@dimen/small_margin</item>
    <item name="android:fontFamily">@font/montserrat</item>
    <item name="android:textSize">@dimen/small_font</item>
    <item name="android:background">@drawable/bg_input</item>
    <item name="android:paddingLeft">@dimen/small_padding</item>
    <item name="android:paddingRight">@dimen/small_padding</item>
  </style>

  <style name="Button">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:background">@drawable/bg_button</item>
    <item name="android:textSize">@dimen/small_font</item>
    <item name="android:fontFamily">@font/montserrat</item>
    <item name="android:textColor">@color/white</item>
  </style>

  <style name="ButtonSecondary">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:background">@drawable/bg_button_secondary</item>
    <item name="android:textSize">@dimen/small_font</item>
    <item name="android:fontFamily">@font/montserrat_bold</item>
    <item name="android:textColor">@color/blue</item>
  </style>

  <style name="ShoeBackground">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">@dimen/small_margin</item>
    <item name="android:layout_marginBottom">@dimen/small_margin</item>
    <item name="android:background">@drawable/bg_input</item>
    <item name="android:padding">@dimen/small_padding</item>
    <item name="android:orientation">vertical</item>
  </style>

  <style name="ShoeTitle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:fontFamily">@font/montserrat_bold</item>
    <item name="android:textSize">@dimen/medium_font</item>
  </style>
  <style name="ShoeDescription">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:fontFamily">@font/montserrat</item>
    <item name="android:textSize">@dimen/small_font</item>
  </style>
</resources>